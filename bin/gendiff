#!/usr/bin/env php
<?php

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';
if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

use Differ\Parser;
use Differ\Differ;

$doc = <<<DOC
Generate diff

Usage:
  gendiff (-h|--help)
  gendiff (-v|--version)
  gendiff [--format <fmt>] <firstFile> <secondFile>

Options:
  -h --help                     Show this screen
  -v --version                  Show version
  --format <fmt>                Report format [default: stylish]
DOC;

$args = Docopt::handle($doc, array('version'=>'Genfiff 1.0'));
/* foreach ($args as $k=>$v)
    echo $k.': '.json_encode($v).PHP_EOL; */

$firstFilePath = $args['<firstFile>'];
$secondFilePath = $args['<secondFile>'];
$format = $args['--format'];

try {
    //Parser\PrintfileContent($firstFilePath);
    //Parser\PrintfileContent($secondFilePath);
    $diff = Differ\genDiff($firstFilePath, $secondFilePath, $format);
    print_r($diff);
} catch (Exception $e) {
    print_r($e->getMessage() . PHP_EOL);
}

